<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="qiniu.predem.example.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/http_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点我发送HttpURLConnection请求"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/okhttp2_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点我发送OkHttp2.0+请求"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/okhttp3_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点我发送OkHttp3.0+请求"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/webview_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点我打开一个网页请求"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/crash_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点我触发一次 crash"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/diagnosis_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点我诊断一下网络"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/anr_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击产生一个ANR"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/custom_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击上报一条自定义数据"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <WebView
            android:id="@+id/webview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>
